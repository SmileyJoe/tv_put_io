<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="AppTheme.Video">
        <item name="android:windowBackground">@color/color_black</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Text.Empty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Genre">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Genre.Video">
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Video">
        <item name="android:lines">2</item>
    </style>

    <style name="Text.Title.Page">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_title_page</item>
        <item name="android:textColor">@color/selector_text</item>
    </style>

    <style name="Text.List">
        <item name="android:textColor">@color/selector_text_inverse</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.List.Details">
        <item name="android:textSize">@dimen/text_list_details</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/ic_width</item>
        <item name="android:layout_height">@dimen/ic_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:tint">@color/selector_icon</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Icon.ProgressSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/ic_tint</item>
    </style>

</resources>