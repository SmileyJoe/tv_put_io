<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" >
        <item name="android:textViewStyle">@style/Text</item>
    </style>

    <style name="AppTheme.Backdrop" parent="Theme.MaterialComponents">

    </style>

    <style name="AppTheme.Series" parent="Theme.MaterialComponents">

    </style>

    <style name="AppTheme.Video">
        <item name="android:windowBackground">@color/color_black</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="Text.ResumeTime">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Empty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Genre">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Genre.Video">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Date">
        <item name="android:textStyle">italic</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Video">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Page">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_title_page</item>
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:padding">@dimen/padding_general</item>
    </style>

    <style name="Text.List">
        <item name="android:textColor">@color/selector_text_inverse</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Text.List.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.List.Details">
        <item name="android:textSize">@dimen/text_list_details</item>
    </style>

    <style name="Text.List.Pill">
        <item name="android:layout_marginRight">@dimen/padding_general</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/selector_bg_inverse_background</item>
    </style>

    <style name="Text.List.Pill.Details">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.Details">
        <item name="android:layout_marginBottom">@dimen/padding_general</item>
    </style>

    <style name="Text.Details.Tagline">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Details.Title">
        <item name="android:textSize">@dimen/text_title_details</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text.Details.Season">
        <item name="android:textSize">@dimen/text_season_details</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text.Details.Runtime">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Details.Date">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text.Details.Overview">
    </style>

    <style name="Text.Details.CastTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Details.Cast">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/ic_width</item>
        <item name="android:layout_height">@dimen/ic_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:tint">@color/selector_icon</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Icon.ProgressSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/ic_tint</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_default</item>
        <item name="android:backgroundTint">@color/selector_bg_inverse</item>
    </style>

    <style name="ListItem.Video">
        <item name="android:padding">@dimen/padding_general</item>
        <item name="android:backgroundTint">@color/color_transparent</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Rounded.Button</item>
        <item name="android:layout_margin">@dimen/padding_general</item>
        <item name="android:backgroundTint">@color/selector_button_backdrop</item>
        <item name="android:textColor">@color/selector_text_button_backdrop</item>
    </style>

    <style name="Shape">
    </style>

    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Shape.Rounded.Button">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Shape.Rounded.Image">
        <item name="cornerSize">@dimen/radius_corner_image</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/ic_tint</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">2dp</item>
    </style>

    <style name="Divider.Horizontal.Fragments">
        <item name="android:layout_height">@dimen/ic_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/padding_general</item>
        <item name="android:layout_marginRight">@dimen/padding_general</item>
    </style>

</resources>