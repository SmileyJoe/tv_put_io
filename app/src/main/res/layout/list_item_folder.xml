<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    style="@style/ListItem"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image_icon"
        style="@style/Icon"
        android:tint="@color/selector_icon_inverse"
        android:duplicateParentState="true"
        android:src="@drawable/ic_folder_24"
        android:layout_margin="@dimen/padding_general"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:duplicateParentState="true">
        <TextView
            android:id="@+id/text_title"
            style="@style/Text.List.Title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_size"
                android:layout_marginRight="@dimen/padding_general"
                style="@style/Text.List.Details"/>

            <TextView
                android:id="@+id/text_updated_at"
                style="@style/Text.List.Details"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>